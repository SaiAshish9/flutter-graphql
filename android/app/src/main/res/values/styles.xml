<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Theme applied to the Android Window while the process is starting -->



    <style name="NormalTheme" >
<!--        <item name="android:textColorHighlight">#024b7c</item>-->
        <item name="android:colorBackground">@color/primaryDark</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="Splash" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowBackground">
            @drawable/background
        </item>
        <item name="android:colorBackground">@color/primaryDark</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/primaryDark</item>
    </style>

</resources>
